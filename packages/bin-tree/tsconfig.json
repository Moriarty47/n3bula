{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es6",
    "baseUrl": "./src",
    "outDir": "./lib/",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib/types-temp",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "typings/**/*.d.ts"]
  },
  "include": ["src/**/*"],
}
